<h1>All Groomers</h1>
<%= link_to "Sort by Number of Pets", "/dog_groomers?sort_by_amount=true" %><br/><br/>
<a href="/dog_groomers/new">New Dog Groomer</a>
<br/><br/>

<%= form_with url: "/dog_groomers", method: :get, local: true do |form| %>
	<%= form.label :search_by_name, "Search by Name: " %>
	<%= form.text_field :search_by_name %>
	<%= form.submit "Search by Name" %>
<% end %>

<%= form_with url: "/dog_groomers", method: :get, local: true do |form| %>
	<%= form.label :search_by_keyword, "Search by Keyword: " %>
	<%= form.text_field :search_by_keyword %>
	<%= form.submit "Search by Keyword" %>
<% end %>


<% @groomers.each do |groomer| %>
	<h3><%= link_to "#{groomer.name}", "/dog_groomers/#{groomer.id}" %></h3>
	<p>Pet Count: <%= groomer.pet_count %></p>
	<p>Created At: <%= groomer.created_at %></p>
<%= button_to "Update #{groomer.name}", "/dog_groomers/#{groomer.id}/edit", method: :get %>
<%= button_to "Delete #{groomer.name}", "/dog_groomers/#{groomer.id}", method: :delete %>
<% end %>