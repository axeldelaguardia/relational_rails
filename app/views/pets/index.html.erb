<h1>Pets</h1>

<%= form_with url: "/pets", method: :get, local: true do |form| %>
	<%= form.label :search_by, "Search by: " %>
	<%= form.text_field :search_by %>
	<%= form.submit "Filter" %>
<% end %>

<% @pets.each do |pet| %>
	<h3><%= pet.name  %></h3>
	<p>Age: <%= pet.age %></p>
	<p>Weight: <%= pet.weight %></p>
	<p>Trained: <%= pet.trained %></p>
	<%= link_to 'Update', "/pets/#{pet.id}/edit" %>
	<%= button_to "Delete #{pet.name}", "/pets/#{pet.id}", method: :delete %>
<% end %>